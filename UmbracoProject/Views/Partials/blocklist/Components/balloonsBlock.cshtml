@model Umbraco.Cms.Web.Common.PublishedModels.BalloonsBlock;
    <div class="top-section">
        <div class="balloons-section">
            <img class="background" src="@Model.BackgroundImage.Url()" alt="@Model.BackgroundImage.Name">
            <div class="balloons">
                <div class="balloon-container distance-close">
                    <div class="balloon">
                        <img src="@Model.MainImage.Url()" alt="@Model.MainImage.Name">
                    </div>
                </div>

            </div>
            
            <div class="content-wrapper">
                <div class="content">
                    <h1>@Model.TextBlockTitle</h1>
                    <p>@Model.TextBlockDescription</p>
                    <div class="buttons">
                        <button class="button primary large">
                            <span class="button__label">@Model.ButtonText</span>
                        </button>
                        <button class="link-decorated primary medium">
                            <span class="link-decorated__label">@Model.LinkText</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
</div>